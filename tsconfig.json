{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "allowJs": true,
    "target": "ESNext",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "baseUrl": ".",
    "moduleResolution": "node",
    "jsx": "react",
  },
  "exclude": ["node_modules", "tmp", "dist", "**/*.js"]
}
